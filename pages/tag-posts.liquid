---
layout: mainlayout.liquid
title: Reilly Spitzfaden, Composer | Posts by Tag
description: Blog posts listed by tag
canonical_url: https://reillyspitzfaden.com/tags/{{ tag }}/
styles:
    - onecolumn.css
pagination:
    data: collections
    size: 1
    alias: tag
    # filter:
        # - like
        # - note
        # - post
permalink: /tags/{{ tag }}/
eleventyExcludeFromCollections: true
---
<link rel="stylesheet" type="text/css" href="/styles/onecolumn.css" />

<style>
    .taggedPostLink {
        margin: 24px 0;
    }
</style>

<main role="main" id="content">
    <article class="tagList">
        <h2 class="sectionHeader">#{{ tag }}</h2>
        {% comment %} <hr /> {% endcomment %}
        {% assign taglist = collections[tag] %}
        {% for post in taglist reversed %}
            <article>
                <h3 class="taggedPostLink"><a href="{{ post.data.canonical_url }}">{{ post.data.title }}</a></h3>
                <p>{{ post.data.description }}</p>
                    <span class="meta-icon">
                    <img src="/media/icon-calendar-ltr.svg" alt="calendar icon" />
                    </span>
                    <span class="meta-text">
                    <time>{{ post.date | date: "%A, %B %d, %Y" }}</time>
                    </span>
                    {% comment %} <hr /> {% endcomment %}
            </article>
        {% endfor %}
        
    </article>
</main>

