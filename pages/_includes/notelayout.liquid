---
layout: mainlayout.liquid
title: Reilly Spitzfaden, Composer
---

<link rel="stylesheet" type="text/css" href="/styles/blogposts.css" />
<link rel="stylesheet" type="text/css" href="/styles/forms.css" />
<link rel="stylesheet" type="text/css" href="/styles/onecolumn.css" />

{% comment %} <style>
    .email-reply {
        margin: 32px 0 16px 0;
    }
</style> {% endcomment %}

<main role="main" id="content">
    <!-- post contents -->
    <article class="h-entry">
        <h2 class="p-name sectionHeader">{{ title }}</h2>

        {% comment %} <a rel="author" class="p-author h-card" href="https://reillyspitzfaden.com"></a> {% endcomment %}
        
        <div hidden>
            <div class="u-author h-card">
                <a class="u-url u-uid" href="https://reillyspitzfaden.com">
                    <img class="u-photo p-name" src="https://reillyspitzfaden.com/media/headshot_gbc_kirby_300px.jpg" alt="Reilly's face in profile with purple pixel art filter">
                </a>
                {%- for url in fedi_url %}
                    <a rel="syndication" class="u-syndication" href="{{ url }}"></a>
                {%- endfor %}
            </div>
        </div>

        {% include "partials/post-meta.liquid" %}
        
        <div class="e-content">
            {{ content }}
            {% if indienews %}
                {% include "partials/indienews.liquid" %}
            {% endif %}
        </div>
        
        <div class="blogPostEndText"><p>---END OF TRANSMISSION---</p></div>

        {% include "partials/post-interactions.liquid" %}
        
    </article>
    
    {% include "partials/webmention-form.liquid" %}

    {% include "partials/webmention-display.liquid" %}
</main>

<script>
    const blogPostURL = "https://reillyspitzfaden.com{{ page.url }}";
</script>
<script defer src="/styles/interactions.js"></script>
