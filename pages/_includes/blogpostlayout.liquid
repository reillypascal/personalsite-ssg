---
layout: mainlayout.liquid
title: Reilly Spitzfaden, Composer
---
<link rel="stylesheet" type="text/css" href="/styles/blogposts.css" />
<link rel="stylesheet" type="text/css" href="/styles/forms.css" />
<link rel="stylesheet" type="text/css" href="/styles/onecolumn.css" />

<!-- page content minus header/footer -->
<main>
    <!-- post contents -->
    <!-- ###### data-pagefind-body boolean attribute makes only blog posts indexed ###### -->
    <article class="h-entry" data-pagefind-body>

        <h2 class="p-name sectionHeader">{{ title }}</h2>

        <a rel="author" class="p-author h-card" href="https://reillyspitzfaden.com"></a>

        <div class="post-meta">
            <span class="meta-icon">
                <img src="/media/icon-calendar-ltr.svg" alt="calendar icon" width="18" height="18" />
            </span>
            
            <span class="meta-text">
                <a class="u-url" href="{{ canonical_url }}"><time class="dt-published" datetime="{{ date | postDate }}">{{ date | date: "%A, %B %d, %Y" }}</time></a>
            </span>
        </div>
        
        <div class="post-tags">
            <span class="tag-icon">
                <img width="18" height="18" src="/media/ui/tag-icon-solid-18px.svg" alt="favorite icon" />
            </span>
            {% assign sorted_categories = tags | sort %}
            {% for tag in sorted_categories %}
                {% comment %} {% if tag != 'post' %} {% endcomment %}
                    <span class="p-category"><a class="post-tag" href="/tags/{{ tag }}">#{{ tag }}</a></span>
                {% comment %} {% endif %} {% endcomment %}
            {% endfor %}
        </div>
        
        <a rel="syndication" class="u-syndication" href="{{ fedi_url }}"></a>

        <div class="e-content">
            {{ content }}
        </div>

        <div class="post-reactions">
            <button id="react-btn">
                <span class="heart-react">
                    <img src="/media/icon-heart-pink.svg" alt="heart icon" />
                </span>
            </button>

            <span id="react-ctr">0</span>
        </div>
        
        <div class="email-reply">
            <span class="mail-icon">
                <img width="18" height="18" src="/media/ui/mail-icon-light-18px.svg" alt="mail icon" />
            </span>
            <a href='mailto:reillypascal@gmail.com?subject=Re: {{ title }}'>Reply via email</a>
        </div>

        {% assign mentions = webmentions-static.children | webmentionsByUrl: canonical_url %}
        {% comment %} <div>{{ webmentions | log }}</div> {% endcomment %}

        <div class="webmention-display">
            <span class="webmention-logo">
                <img width="18" height="18" src="/media/ui/webmention-logo-light-18px.svg" alt="webmention logo" />
            </span>
            <span class="webmention-meta">Webmentions:</span>
            <span class="webmention-reply-icon">
                <img width="18" height="18" src="/media/ui/comment-icon-light-18px.svg" alt="reply icon" />
            </span>
            <span class="webmention-meta">{{ mentions.commentCount }}</span>
            <span class="webmention-repost-icon">
                <img width="18" height="18" src="/media/ui/repost-icon-light-18px.svg" alt="repost icon" />
            </span>
            <span class="webmention-meta">{{ mentions.repostCount }}</span>
            <span class="webmention-fav-icon">
                <img width="18" height="18" src="/media/ui/favorite-icon-light-18px.svg" alt="favorite icon" />
            </span>
            <span class="webmention-meta">{{ mentions.likeCount }}</span>
        </div>

        {% comment %} <div class="share-openly">
            <img class="share-openly-icon" src="/media/share-openly.svg">&nbsp;
            <a href="https://shareopenly.org/share/?url={{ canonical_url }}">Share on the Fediverse</a>
        </div> {% endcomment %}

    </article>
    
    <article>
        <div class="webmentionForm">
            <form id="webmention-form" action="https://webmention.io/reillyspitzfaden.com/webmention" method="POST">
                <h2 class="sectionHeader">Send me a webmention</h2>
                <p>
                    <label for="webmention-form">This post accepts <a href="https://en.wikipedia.org/wiki/Webmention">webmentions</a>. If you link to and write about this on your website, you can enter the web address of your post below:</label>
                </p>

                <input id="webmention-source" type="url" autocomplete="url" required="" pattern="^https?:\/\/(.*)" name="source" placeholder="URL/Permalink of your article" class="error" aria-invalid="true">
                
                <input id="webmention-submit" type="submit" name="submit" value="Ping me!">

                <input id="webmention-format" type="hidden" name="format" value="html">
                <input id="webmention-target" type="hidden" name="target" value="">
            </form>
        </div>
            
        <div class="commentSection">
            <form id="comment-form" name="comments" action="" method="POST">
                <h2 class="sectionHeader">Leave a comment</h2>
                <fieldset>
                    <legend>Comment</legend>
                    <ul>
                        <li><input type="text" name="name" id="comment-name" placeholder="Name (required)" class="textinput" required="true" aria-required="true"></li>
                        <li><input type="text" name="email" id="comment-email" placeholder="Email (optional)" class="textinput"></li>
                        <li><textarea name="comment" id="comment-story" placeholder="Comment (required)" required="true" aria-required="true"></textarea></li>
                        <li><div id="submit-success"></div><input type="submit" value="Submit" id="submit-comment" ></li>
                    </ul>
                </fieldset>
            </form>
            <div id="commentDisplay">
                <h2 class="sectionHeader">Comments</h2>
                <input type="submit" id="load-comments" value="Load Comments">
                {% comment %} <input type="submit" id="load-comments" value="Load Comments" onclick="this.blur();"> {% endcomment %}
                <div id="comment-section"></div>
            </div>
        </div>
    </article>
</main>

<script>
    let blogPostURL = "{{ canonical_url }}";
    // console.log(webmentions.mentions);
</script>
<script src="/styles/interactions.js"></script>

