                                <div id="about-dropdown-content" class="dropdown-content">
                                    <a href="/bio">Bio</a>
                                    <a href="/now">Now</a>
                                </div>
                                
                            </div>
                        </div>
    
                        <div class="navElement">
                            <div id="music-dropdown" class="dropdown">
                                
                                {% comment %} <label for="music-dropdown-btn" tabindex="0" class="dropbtn"> {% endcomment %}
                                <button onclick="showDropdown('music-dropdown-content')" class="dropbtn">
                                    Music<img src="/media/ui/chevron-down-svgrepo-com.svg" alt="dropdown menu arrow for 'music'section" height="11" width="18" />
                                </button>
                                {% comment %} </label>
                                <input id="music-dropdown-btn" type="checkbox" class="dropdown-checkbox" aria-hidden="true" /> {% endcomment %}
                                
                                <div id="music-dropdown-content" class="dropdown-content">
                                    <a href="/works">Works List</a>
                                    <a href="/media">Media</a>
                                    <a href="/shop">Shop</a>
                                    <a href="/supplemental">Supplemental Materials</a>
                                </div>
                                
                            </div>
                        </div>
                        
                        <div class="navElement">
                            <div id="posts-dropdown" class="dropdown">
                                
                                {% comment %} <label for="blog-dropdown-btn" tabindex="0" class="dropbtn"> {% endcomment %}
                                <button onclick="showDropdown('blog-dropdown-content')" class="dropbtn">
                                    Blogging<img src="/media/ui/chevron-down-svgrepo-com.svg" alt="dropdown menu arrow for 'blog'section" height="11" width="18" />
                                </button>
                                {% comment %} </label>
                                <input id="blog-dropdown-btn" type="checkbox" class="dropdown-checkbox" aria-hidden="true" /> {% endcomment %}
                                
                                <div id="blog-dropdown-content" class="dropdown-content">
                                    <a href="/blog">Blog</a>
                                    <a href="/notes">Notes</a>
                                    <a href="/interactions">Interactions</a>
                                    <a href="/blogroll">Blogroll</a>
                                </div>
                            </div>
                        </div>
    
                        <div class="navElement"><a href="/code">Code</a></div>
                        <div class="navElement"><a href="/contact">Contact</a></div>
                        <div class="navElement"><a href="/feeds">RSS</a></div>
                    </div>
                    {% comment %} </div> {% endcomment %}
                </nav>
                
            </header>
            
            {{ content }}
            
            <!-- footer -->
            <footer>
                <div class="social-icons">
                    <a href="https://bsky.app/profile/reillypascal.bsky.social" title="Bluesky"><img src="/media/bluesky-logo-light.svg" alt="Bluesky" width="36" height="32" /></a>
                    <a href="https://github.com/reillypascal" title="GitHub"><img src="/media/github-logo-light.svg" alt="GitHub" width="32" height="31" /></a>
                    <a href="https://hachyderm.io/@reillypascal" title="Mastodon"><img src="/media/mastodon-logo-light.svg" alt="Mastodon" width="32" height="34" /></a>
                    <a href="https://makertube.net/c/reilly_spitzfaden_composer/videos" title="PeerTube"><img src="/media/peertube-logo-light.svg" alt="PeerTube" width="24" height="32" ></a>
                    <a href="https://soundcloud.com/reilly-spitzfaden" title="SoundCloud"><img src="/media/soundcloud-logo-light.svg" alt="SoundCloud" width="40" height="32" /></a>
                    <a href="https://www.youtube.com/@reillyspitzfaden" title="YouTube"><img src="/media/youtube-icon-dark.png" alt="YouTube" width="32" height="32" /></a>
                    <a href="https://reillyspitzfaden.com/feeds" title="RSS"><img src="/media/rss-icon-light.svg" alt="RSS" width="32" height="32" /></a>
                </div>
                
                {% comment %} <p class="octothorpes-badge"><a href="https://octothorp.es" class="img-badge"><img src="/media/octothorpes-badge.png" alt="Badge for the Octothorpes main ring" height="31" width="88" /></a></p> {% endcomment %}

                <p>
                    <a href="https://xn--sr8hvo.ws/previous" class="webring-prev-arrow">←</a>
