<div class="post-reactions">
    <button id="react-btn">
        <span class="heart-react">
            <img src="/media/icon-heart-pink.svg" alt="heart icon" />
        </span>
    </button>

    <span id="react-ctr">0</span>
</div>

<div class="email-reply">
    <span class="mail-icon">
        <img width="18" height="18" src="/media/ui/mail-icon-light-18px.svg" alt="mail icon" />
    </span>
    <a href='mailto:reillypascal@gmail.com?subject=Re: {{ title }}'>Reply via email</a>
</div>

{% comment %} {% assign mentions = webmentions-static.children | webmentionsByUrl: "https://reillyspitzfaden.com{{ post.url }}" %} {% endcomment %}
{% comment %} <div>{{ webmentions | webmentionsForPage: "https://reillyspitzfaden.com{{ post.url }}" }}</div> {% endcomment %}
{% assign mentions = webmentions.mentions | webmentionsByUrl: "https://reillyspitzfaden.com{{ post.url }}" %}

<div class="webmention-display">
    <span class="webmention-logo">
        <img width="18" height="18" src="/media/ui/webmention-logo-light-18px.svg" alt="webmention logo" />
    </span>
    <span class="webmention-meta">Webmentions:</span>
    <span class="webmention-reply-icon">
        <img width="18" height="18" src="/media/ui/comment-icon-light-18px.svg" alt="reply icon" />
    </span>
    <span id="webmention-comments">{{ mentions.comments | size }}</span>
    <span class="webmention-repost-icon">
        <img width="18" height="18" src="/media/ui/repost-icon-light-18px.svg" alt="repost icon" />
    </span>
    <span id="webmention-reposts">{{ mentions.reposts | size }}</span>
    <span class="webmention-fav-icon">
        <img width="18" height="18" src="/media/ui/favorite-icon-light-18px.svg" alt="favorite icon" />
    </span>
    <span id="webmention-likes">{{ mentions.likes | size }}</span>
</div>

{% comment %} <div class="share-openly">
    <img class="share-openly-icon" src="/media/share-openly.svg">&nbsp;
    <a href="https://shareopenly.org/share/?url=https://reillyspitzfaden.com{{ post.url }}">Share on the Fediverse</a>
</div> {% endcomment %}