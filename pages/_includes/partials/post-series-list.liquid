{%- if post_series != "" %}
    {% assign this_series = collections.post | categoryValue: "post_series", post_series %}
    <p class="post-series">All posts in this series:
        {%- for series_post in this_series %}
        <a href="{{ series_post.url }}">Part {{ forloop.index }}</a>
        {%- if not forloop.last -%}
        ,
        {%- endif -%}
        {%- endfor %}
    </p>
{%- endif %}

