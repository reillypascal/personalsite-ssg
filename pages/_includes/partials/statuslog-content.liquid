{%- assign latest_status = collections.status | slice: -1, 1 -%}

{{ latest_status[0].content }}

<div class="post-meta">
    <span class="meta-icon">
        <img src="/media/icon-calendar-ltr.svg" alt="calendar icon" width="18" height="18" />
    </span>
    <span class="meta-text">
        <time class="dt-published" datetime="{{ latest_status[0].data.date }}">{{ latest_status[0].data.date | date: "%B %d, %Y, %-l:%M %p" }}</time>
    </span>
</div>

<div class="post-loc">
    <span class="loc-icon">
        <img src="/media/ui/map-pin-icon-light-18px.svg" alt="map pin icon" width="18" height="18" />
    </span>
    <span class="loc-text">
        <span>{{ latest_status[0].data.location }}</span>
    </span>
</div>