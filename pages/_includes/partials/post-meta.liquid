<div class="post-meta">
    <span class="meta-icon">
        <img src="/media/icon-calendar-ltr.svg" alt="calendar icon" width="18" height="18">
    </span>

    <span class="meta-text">
        {%- assign is_wiki = false -%}
        {%- for tag in tags -%}
            {%- if tag == 'wiki' -%}
                {%- assign is_wiki = true -%}
            {%- endif -%}
        {%- endfor -%}
        {%- if is_wiki -%}
            {% comment %} page.date gets the Last Updated variable properly {% endcomment %}
            <a class="u-url" href="{{ url }}"
                ><time class="dt-published" datetime="{{ page.date | postDate }}"
                    >Last updated {{ page.date | date: '%B %d, %Y' -}}
                </time></a
            >
        {%- else -%}
            <a class="u-url" href="{{ url }}"
                ><time class="dt-published" datetime="{{ date | postDate }}">
                    {{- date | date: '%A, %B %d, %Y' -}}
                </time></a
            >
        {%- endif -%}
    </span>
</div>
{% if location and location != '' %}
    <div class="post-loc">
        <span class="loc-icon">
            <img src="/media/ui/map-pin-icon-light-18px.svg" alt="map pin icon" width="18" height="18">
        </span>
        <span class="loc-text">
            <span>{{ location }}</span>
        </span>
    </div>
{% endif %}
<div class="post-tags">
    <span class="tag-icon">
        <img width="18" height="18" src="/media/ui/tag-icon-solid-18px.svg" alt="favorite icon">
    </span>
    {% assign sorted_categories = tags | sort %}
    {%- for tag in sorted_categories %}
        {% if tag != 'interaction' and tag != 'note' and tag != 'post' and tag != 'wiki-root' %}
            <span class="p-category"
                ><a class="post-tag" href="/tags/{{ tag }}">#{{ tag | replace: '-', ' ' }}</a></span
            >
        {% endif %}
    {%- endfor %}
</div>
